<%= form_with model: @post, id: "posts-form", scope: :post, url: user_posts_path do |form| %>
  <div class="form-title">
    <%=form.label :title, class: 'form-label' %><br>
    <%=form.text_field :title, :required => true, class: 'form-title-input' %>
  </div>
  <div class="form-text">
    <%=form.label :text, class: 'form-label' %><br>
    <%=form.text_area :text, :required => true, class: 'form-text-input' %>
  </div>
  <div class="form-submit">
    <%= button_tag type: 'submit', class: "submit-btn" do %>
      Submit
    <% end %>
  </div>
<% end %>
